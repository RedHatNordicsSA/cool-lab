--- 
- name: Solve prereqs for sql installation on the host  
  hosts: "{{ short_name }}"
  become: yes 

  tasks: 
  - name: Permit mssql traffic in fw on port 1433/tcp
    firewalld:
      port: 1433/tcp
      permanent: yes
      immediate: yes
      state: enabled 

  - name: Permit monitoring traffic 
    firewalld:
      service: "{{ item }}"
      permanent: yes
      immediate: yes
      state: enabled 
    with_items:
      - pmcd
      - pmproxy
